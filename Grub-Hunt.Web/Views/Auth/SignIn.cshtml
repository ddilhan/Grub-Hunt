@model Grub_Hunt.Web.DTOs.SignInDTO

@{
    ViewData["Title"] = "Sign In";
}

<form method="post" asp-controller="Auth" asp-action="SignIn">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Sign In</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Sign In</button>
            </div>
        </div>
    </div>
</form>